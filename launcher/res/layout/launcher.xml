<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/workspace_bg" >

    <com.cooeeui.brand.zenlauncher.scenes.utils.DragLayer
        android:id="@+id/drag_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical" >
		
	        <FrameLayout
	                android:layout_width="match_parent"
	                android:layout_height="220dp" >
	
	                <ImageView
	                    android:id="@+id/weatherclock"
	                    android:layout_width="300dp"
	                    android:layout_height="match_parent"
	                    android:layout_gravity="center"
	                    android:contentDescription="weatherclock"
	                    android:src="@drawable/weatherclock" />
	            </FrameLayout>
	            
	        <com.cooeeui.brand.zenlauncher.scenes.Workspace
	            android:id="@+id/workspace"
	            android:layout_width="match_parent"
	            android:layout_height="240dp" >

	        </com.cooeeui.brand.zenlauncher.scenes.Workspace>
	        <LinearLayout 
	            android:id="@+id/search_layout"
	            android:layout_width="match_parent"
				android:layout_height="80dp"
				android:orientation="horizontal" >
		                
		        <ImageView
		                android:id="@+id/searchbar"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:src="@drawable/searchbar" />
	        </LinearLayout>
	        
        </LinearLayout>
    </com.cooeeui.brand.zenlauncher.scenes.utils.DragLayer>

</FrameLayout>