<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/workspace_bg" >

    <com.cooeeui.brand.zenlauncher.scenes.utils.DragLayer
        android:id="@+id/drag_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.cooeeui.brand.zenlauncher.scenes.Workspace
            android:id="@+id/workspace"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_gravity="top" >

                <ImageView
                    android:id="@+id/weatherclock"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="weatherclock"
                    android:src="@drawable/weatherclock" />
            </FrameLayout>

            <ImageView
                android:id="@+id/searchbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6dp"
                android:src="@drawable/searchbar" />
        </com.cooeeui.brand.zenlauncher.scenes.Workspace>
    </com.cooeeui.brand.zenlauncher.scenes.utils.DragLayer>

</FrameLayout>